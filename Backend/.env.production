# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration (use production database)
DATABASE_URL=mysql+pymysql://username:password@production-host/empl_prod

# JWT Configuration (use strong secret in production)
JWT_SECRET=your-super-strong-production-secret-key-here
JWT_ALGORITHM=HS256

# OTP Configuration
OTP_EXPIRY_MINUTES=5
ENABLE_EMAIL_OTP=true

# Email Configuration (required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@gmail.com
SMTP_PASSWORD=your-production-app-password
SMTP_FROM_EMAIL=noreply@yourcompany.com
